{
  "name": "custardcream",
  "version": "1.0.0",
  "description": "커스텀 라이브러리 모음",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=8.6.12"
  },
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"pnpm build:watch\" \"pnpm --filter web dev\"",
    "build": "rm -rf packages/*/dist && rollup -c --bundleConfigAsCjs",
    "build:watch": "pnpm build --watch",
    "publish:react-gantt": "pnpm run build && pnpm --filter react-gantt publish --report-summary --access public",
    "publish:very-simple-store": "pnpm run build && pnpm --filter very-simple-store publish --report-summary --access public",
    "storybook": "NODE_ENV=development concurrently \"pnpm build:watch\" \"pnpm --filter ./apps/storybook storybook\"",
    "prepare": "husky install",
    "pre-commit": "pnpm --filter \"@custardcream/*\" pre-commit"
  },
  "keywords": [],
  "author": "shiwoo.park <custardcream@kakao.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.14",
    "@babel/preset-react": "^7.22.5",
    "@changesets/cli": "^2.26.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@swc/core": "^1.3.82",
    "@types/node": "20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "pnpm": "^8.6.12",
    "prettier": "^3.0.3",
    "rollup": "^3.28.1",
    "rollup-plugin-dts": "^6.0.1",
    "rollup-plugin-styles": "^4.0.0",
    "rollup-plugin-swc3": "^0.10.4",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-prettier": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.1"
  },
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "resolutions": {
    "tsconfig-paths": "^4.2.0"
  }
}
