{
  "name": "custardcream",
  "version": "1.0.0",
  "description": "커스텀 라이브러리 모음",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=8.6.12"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "lint:base": "eslint --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "lint:debug": "pnpm lint:base --debug",
    "lint:fix": "pnpm lint:base --fix",
    "lint:react-gantt": "pnpm lint:base ./packages/react-gantt",
    "lint:react-gantt:debug": "pnpm lint:debug ./packages/react-gantt",
    "lint:react-gantt:fix": "pnpm lint:fix ./packages/react-gantt",
    "lint:web": "pnpm lint:base ./apps/web",
    "lint:web:fix": "pnpm lint:fix ./apps/web",
    "lint:web:debug": "pnpm lint:debug ./apps/web",
    "build": "rm -rf packages/*/dist && rollup -c --bundleConfigAsCjs",
    "publish:react-gantt": "pnpm run build && pnpm --filter react-gantt publish --report-summary"
  },
  "keywords": [],
  "author": "shiwoo.park <custardcream@kakao.com>",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/node": "20.5.8",
    "eslint": "^8.48.0",
    "pnpm": "^8.6.12",
    "prettier": "^3.0.3",
    "rollup": "^3.28.1",
    "rollup-plugin-dts": "^6.0.1",
    "typescript": "^5.2.2",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2"
  },
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "packages/*"
  ]
}
